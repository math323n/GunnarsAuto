<Window x:Class="GunnarsAuto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GunnarsAuto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="800" />
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="75*" />
            <RowDefinition Height="25*" />
            
        </Grid.RowDefinitions>
        <Viewbox Grid.Column="1"
                 Grid.Row="1">
            <DataGrid  x:Name="CarTableDataGrid"
                      MinHeight="500" ColumnWidth="250" RowHeight="75"
                       HeadersVisibility="None"
                       Background="Bisque"
                       RowBackground="LightSeaGreen"
                       AlternatingRowBackground="MintCream"
                       BorderBrush="Gray"
                       BorderThickness="5"
                       FontSize="20"></DataGrid>
           
        </Viewbox>
        
        
       
        
    </Grid>
</Window>
